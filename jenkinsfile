pipeline {
    agent any
    
    environment {
        GIT_REPO = 'https://github.com/sibilucky/dockerjenkins-.git'
        DOCKER_IMAGE = 'sibisam2301/myapp-backend'
        DOCKER_REGISTRY_CREDENTIALS = 'dockerhub'
        DOCKER_EMAIL = 'sibisam2301@gmail.com'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'demo', url: 'https://github.com/sibilucky/dockerjenkins-.git']])
                }
        }

        stage('Container Image Builds') {
            steps {
                    echo 'sh \'docker build -t sibisam2301/myapp-backend'
                    }
            
        }

        stage('Push image to Docker Hub') {
            steps {
                script {
                    // Use withCredentials to handle DockerHub credentials securely
                    withCredentials([string(credentialsId: DOCKER_REGISTRY_CREDENTIALS, variable: 'dockerhubpwd')]) {
                        sh '''
                        echo "Logging into DockerHub..."
                        docker login -u sibisam2301 -p ${dockerhubpwd}
                        '''
                    }
                    // Push the image to Docker Hub
                    sh 'docker push sibisam2301/myapp-backend:${env.BUILD_NUMBER}'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed. Cleaning up resources..."
            // Optionally clean up Docker images (uncomment the following line if needed)
            // sh 'docker rmi sibisam2301/myapp-backend:${env.BUILD_NUMBER}'
        }
    }
}
